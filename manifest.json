{
  "manifest_version": 2,
  "name": "Luv",
  "version": "1.0",
  "description": "A laguage learnig extension and that keeps track of the words you learn using video captions.",
  "icons": {
    "1": "icon.png"
  },
  "permissions": [
    "<all_urls>"
  ],
  "browser_action": {
      "default_icon": "icon.png",
    "default_title": "Luv",
    "default_popup": "popup.html"
  },
  "content_scripts": [
  {
    "matches": ["<all_urls>"],
    "js": ["content_script.js"],
    "run_at": "document_idle"
  }],
  "background": {
    "scripts": ["background-script.js"],
	"persistent": true,
	"type": "module"
  }

}
