{
  "manifest_version": 2,
  "name": "Luv",
  "version": "1.0",
  "description": "A laguage learnig extension and that keeps track of the words you learn using video captions.",
  "icons": {
    "1": "icon.png"
  },
  "permissions": [
    "<all_urls>","storage"
  ],
  "browser_action": {
      "default_icon": "icon.png",
    "default_title": "Luv",
    "default_popup": "popup.html"
  },
  "content_scripts": [
  {
    "matches": ["https://*.youtube.com/watch*"],
    "js": ["content_script.js"],
    "run_at": "document_end"
  }],
  "web_accessible_resources": [
    "popup.html"
  ],
  "background": {
    "scripts": ["background-script.js"],
	"persistent": true,
	"type": "module"
  },
  "browser_specific_settings": {
  "gecko": {
    "id": "9a41634eed1f4eb9e8631a0208082894eeb13ef9@luv"
  }
}

}
